<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1D1E22"
    android:padding="12dp">

    <!-- Поле для ввода выражения -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Поле для отображения результата -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#FF4CAF50"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInput" />

    <!-- Сетка с кнопками -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="6"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResult">

        <!-- Ряд 1 -->
        <Button
            android:id="@+id/btnSin"
            style="@style/CalcBtn.Special"
            android:text="sin" />

        <Button
            android:id="@+id/btnCos"
            style="@style/CalcBtn.Special"
            android:text="cos" />

        <Button
            android:id="@+id/btnTan"
            style="@style/CalcBtn.Special"
            android:text="tan" />

        <Button
            android:id="@+id/btnOpen"
            style="@style/CalcBtn.Special"
            android:text="(" />

        <Button
            android:id="@+id/btnPow"
            style="@style/CalcBtn.Op"
            android:text="xⁿ" />

        <!-- Ряд 2 -->
        <Button
            android:id="@+id/btnAsin"
            style="@style/CalcBtn.Special"
            android:text="asin" />

        <Button
            android:id="@+id/btnAcos"
            style="@style/CalcBtn.Special"
            android:text="acos" />

        <Button
            android:id="@+id/btnAten"
            style="@style/CalcBtn.Special"
            android:text="atan" />

        <Button
            android:id="@+id/btnClose"
            style="@style/CalcBtn.Special"
            android:text=")" />

        <Button
            android:id="@+id/btnDiv"
            style="@style/CalcBtn.Op"
            android:text="÷" />

        <!-- Ряд 3 -->
        <Button
            android:id="@+id/btn7"
            style="@style/CalcBtn.Num"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalcBtn.Num"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalcBtn.Num"
            android:text="9" />

        <Button
            android:id="@+id/btnDegRad"
            style="@style/CalcBtn.Special"
            android:text="DEG" />

        <Button
            android:id="@+id/btnMul"
            style="@style/CalcBtn.Op"
            android:text="×" />

        <!-- Ряд 4 -->
        <Button
            android:id="@+id/btn4"
            style="@style/CalcBtn.Num"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalcBtn.Num"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalcBtn.Num"
            android:text="6" />

        <Button
            android:id="@+id/btnClear"
            style="@style/CalcBtn.Special"
            android:text="AC"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSub"
            style="@style/CalcBtn.Op"
            android:text="−" />

        <!-- Ряд 5 -->
        <Button
            android:id="@+id/btn1"
            style="@style/CalcBtn.Num"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalcBtn.Num"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalcBtn.Num"
            android:text="3" />

        <Button
            android:id="@+id/btnDel"
            style="@style/CalcBtn.Special"
            android:text="⌫"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalcBtn.Op"
            android:text="+" />

        <!-- Ряд 6 -->
        <Button
            android:id="@+id/btn0"
            style="@style/CalcBtn.Num"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            style="@style/CalcBtn.Num"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            style="@style/CalcBtn.Op"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="=" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
